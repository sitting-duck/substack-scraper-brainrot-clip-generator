
BASE_URL=https://you.substack.com
OUT_DIR=data

IN_DIR=to_render
OUT_DIR=rendered
DONE_DIR=done
FAILED_DIR=failed

VIDEO_DURATION_SEC=30
FRAME_W=1080
FRAME_H=1920
FPS=30

# Stock footage (optional). If PEXELS_API_KEY empty, it uses a simple fallback background.
PEXELS_API_KEY=""
PEXELS_QUERY_FALLBACK=abstract bokeh city night

# TTS: Set USE_EDGE_TTS=true to use Edge-TTS; otherwise macOS 'say' fallback.
USE_EDGE_TTS=true
EDGE_TTS_VOICE=en-US-JennyNeural

# Telegram (optional)
SEND_TELEGRAM=true
TELEGRAM_BOT_TOKEN=""
TARGET_CHAT=@your_channel,-1001234567890
SUBSCRIBERS_FILE=subscribers.json  # optional; JSON list of chat ids

# Rate limiting between sends (sec)
SEND_COOLDOWN_SEC=1.5

ENABLE_CAPTIONS=false
USE_EDGE_TTS=false

